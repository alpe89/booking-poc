generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// MODELS
// ============================================================================

model Travel {
  id           String    @id @default(uuid())
  slug         String    @unique
  name         String
  description  String    @db.Text
  startingDate DateTime  @db.Date
  endingDate   DateTime  @db.Date
  price        Int
  moods        Json      // Moods type: { nature, relax, history, culture, party }
  totalSeats   Int       @default(5)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  bookings Booking[]

  @@index([slug])
  @@map("travels")
}

model Booking {
  id          String        @id @default(uuid())
  travelId    String
  email       String
  seats       Int
  totalAmount Int
  status      BookingStatus @default(PENDING)
  expiresAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  travel   Travel    @relation(fields: [travelId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@index([travelId, status])
  @@index([expiresAt])
  @@index([email])
  @@map("bookings")
}

model Payment {
  id            String        @id @default(uuid())
  bookingId     String
  amount        Int
  status        PaymentStatus
  transactionId String?       // Null se fallito
  errorCode     String?       // Es: CARD_DECLINED, INSUFFICIENT_FUNDS
  cardLast4     String?       // Ultime 4 cifre della carta (per reference)
  createdAt     DateTime      @default(now())

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([bookingId])
  @@index([status])
  @@index([transactionId])
  @@map("payments")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  EXPIRED
  CANCELLED
}

enum PaymentStatus {
  SUCCESS
  FAILED
}
