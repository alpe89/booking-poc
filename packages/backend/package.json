{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "type": "module",
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "dotenv -e .env.local --override -- nest start --watch",
    "start:debug": "dotenv -e .env.local --override -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "dotenv -e .env.local --override -- vitest run",
    "test:watch": "dotenv -e .env.local --override -- vitest",
    "test:ui": "dotenv -e .env.local --override -- vitest --ui",
    "test:cov": "dotenv -e .env.local --override -- vitest run --coverage",
    "test:integration": "dotenv -e .env.test --override -- vitest run --config vitest.config.integration.ts",
    "test:integration:watch": "dotenv -e .env.test --override -- vitest --config vitest.config.integration.ts",
    "test:db:setup": "node test/setup-test-db.mjs",
    "test:db:up": "docker compose -f ../../docker-compose.test.yml up -d postgres-test",
    "test:db:down": "docker compose -f ../../docker-compose.test.yml down postgres-test",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.local --override -- prisma migrate dev",
    "db:seed": "dotenv -e .env.local --override -- prisma db seed",
    "db:reset": "dotenv -e .env.local --override -- prisma migrate reset --force",
    "db:studio": "dotenv -e .env.local --override -- prisma studio"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/schedule": "^6.0.1",
    "@prisma/client": "^6.17.1",
    "prisma": "^6.17.1",
    "rxjs": "^7.8.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.38.0",
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.6",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/express": "^5.0.3",
    "@types/node": "^24.8.1",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "unplugin-swc": "^1.5.7",
    "vite": "^7.1.10",
    "vitest": "^3.2.4"
  },
  "prisma": {
    "seed": "node prisma/seed.mjs"
  }
}
